<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ilgiturizm.ilgiturizm.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HAC UMRE REHBERÄ°"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="#bb0d0d"
        android:onClick="hacUmreRehberiAc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HAKKIMIZDA"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="#44b588"
        android:onClick="hakkimizdaAc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HABERLER &amp; DUYURULAR"
        android:id="@+id/textView3"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:textColor="#001eff" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/facebookImg"
            android:background="@drawable/facebook"
            android:layout_alignTop="@+id/facebookImg"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:onClick="yonlendirme" />
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/instagramImg"
            android:background="@drawable/instagram"
            android:layout_alignTop="@+id/instagramImg"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:onClick="yonlendirme" />
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/twitterImg"
            android:background="@drawable/twitter"
            android:layout_alignTop="@+id/twitterImg"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:onClick="yonlendirme" />

    </LinearLayout>

</RelativeLayout>
